  .cmr-3 {
    margin-right: 1.875rem;
  }

  .cmr-4 {
    margin-right: 2.5rem;
  }

  .cmr-5 {
    margin-right: 3.125rem;
  }

  .cmb-1 {
    margin-bottom: .625rem;
  }

  .cmb-2 {
